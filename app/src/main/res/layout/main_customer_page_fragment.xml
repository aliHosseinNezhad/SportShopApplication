<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/basket_view"
                layout="@layout/basket_tab_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/basket_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@null"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="@id/basket_view"
                app:layout_constraintEnd_toEndOf="@+id/basket_view"
                app:layout_constraintStart_toStartOf="@id/basket_view"
                app:layout_constraintTop_toTopOf="@id/basket_view" />

            <ImageView
                android:id="@+id/setting_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"

                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/setting_ic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text=" نام و نام خانوادگی"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="12sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/basket_btn"
                app:layout_constraintStart_toEndOf="@id/setting_btn"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <View
        android:id="@+id/line1_one"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/secondaryLightColor"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1_one">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingTop="24dp"
                android:paddingBottom="16dp">

                <com.gamapp.sportshopapplication.ui.customViews.TitledImage
                    android:id="@+id/buy_history_btn"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/light_ripple"
                    app:image_weight="3"
                    app:src="@drawable/client_product_v_light_green"
                    app:title="تاریخچه خرید های شما"
                    app:title_weight="1" />

                <com.gamapp.sportshopapplication.ui.customViews.BorderLine
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    app:line_width="1px"
                    app:orientation="vertical" />

                <com.gamapp.sportshopapplication.ui.customViews.TitledImage
                    android:id="@+id/canceled_buy_btn"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/light_ripple"
                    app:image_weight="3"
                    app:src="@drawable/disagree_v_red"
                    app:title="لغو شده ها"
                    app:title_weight="1" />

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>


    <View
        android:id="@+id/borderLine"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        app:layout_constraintTop_toBottomOf="@id/main_scroll_view"
        android:background="@color/secondaryLightColor" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/adContainer"
        app:layout_constraintTop_toBottomOf="@+id/borderLine"
        app:layout_constraintVertical_bias="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/start_map_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/persian_text_style"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="مکان فروشگاه در نقشه" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/location_on"
                    app:tint="@color/primaryTextColor" />
            </LinearLayout>

            <com.gamapp.sportshopapplication.ui.customViews.BorderLine
                android:layout_width="match_parent"
                android:layout_height="8dp"
                app:line_width="1px"
                app:orientation="horizontal" />

            <LinearLayout
                android:id="@+id/user_account_info_Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textview.MaterialTextView

                    style="@style/persian_text_style"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="@string/information" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="16dp"
                    android:scaleType="centerInside"

                    android:src="@drawable/person_ic"
                    app:tint="@color/primaryTextColor" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <ir.tapsell.sdk.bannerads.TapsellBannerView
        android:id="@+id/adContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tapsell_banner_type="banner_320x100" />

    <FrameLayout
        android:elevation="32dp"
        android:id="@+id/logout_waiting_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_black"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:text="@string/logouting_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/secondaryLightColor" />

            <com.github.ybq.android.spinkit.SpinKitView
                style="@style/SpinKitView.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/white" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:elevation="32dp"
        android:id="@+id/google_map_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>