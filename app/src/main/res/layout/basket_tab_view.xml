<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:visibility="gone"
        android:elevation="4dp"
        android:id="@+id/selectedItemCount"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="12"
        android:lines="1"
        app:autoSizeMinTextSize="1sp"
        app:autoSizeMaxTextSize="24sp"
        app:autoSizeTextType="uniform"
        android:textColor="@color/white"
        android:background="@drawable/text_background"
        app:layout_constraintEnd_toEndOf="@id/tabItemIcon"
        app:layout_constraintBottom_toBottomOf="@id/tabItemIcon" />
    <ImageView
        style="@style/tab_layout_image"
        android:src="@drawable/basket_icon_selector"
        android:id="@+id/tabItemIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:gravity="center"
        android:letterSpacing="0"
        android:text="سبد خرید"
        android:lines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabItemIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>